        android:layout_alignStart="@+id/RC2"
        android:layout_height="30dp"
        android:layout_marginTop="15dp" />

    <Button
        android:text="7:05 PM"
        android:layout_width="wrap_content"
        android:id="@+id/LMC4"
        android:background="@color/colorPrimary"
