        android:id="@+id/amcdist"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/regaldist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:text="New Text"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/landmarkdist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/amcdist"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:text="New Text"
        android:textColor="#000000"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:id="@+id/imageView4"
        android:src="@drawable/location"
        android:layout_alignTop="@+id/amcdist"
        android:layout_toStartOf="@+id/amcdist" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:id="@+id/imageView5"
        android:src="@drawable/location"
        android:layout_alignTop="@+id/regaldist"
        android:layout_toStartOf="@+id/regaldist" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:id="@+id/imageView6"
        android:src="@drawable/location"
        android:layout_alignTop="@+id/landmarkdist"
        android:layout_toStartOf="@+id/landmarkdist" />



